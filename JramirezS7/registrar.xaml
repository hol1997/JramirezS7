<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JramirezS7.registrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registrar" />
            <Label Text="Nombre"/>
            <Entry Placeholder="Introdusca el nombre" x:Name="nombre"/>
            <Label Text="Usuario"/>
            <Entry Placeholder="Introdusca el usuario" x:Name="usuario"/>

            <Label Text="contraseñia"/>
            <Entry Placeholder="Introdusca la contrasenia" IsPassword="True" x:Name="contrasenia"/>
            <Button x:Name="btnagregar" Text="Agregar" Clicked="btnagregar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>