<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JramirezS7.ConsultaRegistra">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LISTA ESTUDIANTE"  FontSize="20" HorizontalTextAlignment="Center"/>
            <ListView x:Name="ListaEstudiante" ItemSelected="ListaEstudiante_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombre}" Detail="{Binding usuario}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>